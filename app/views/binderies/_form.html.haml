= form_for(@bindery) do |f|
  - if @bindery.errors.any?
    #error_explanation
      %h2
        = pluralize(@bindery.errors.count, "error")
        prohibited this bindery from being saved:
      %ul
        - @bindery.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :opdescription
    %br/
    = f.text_field :opdescription
  .field
    = f.label :unit
    %br/
    = f.text_field :unit
  .field
    = f.label :unitcost
    %br/
    = f.number_field :unitcost
  .actions
    = f.submit
