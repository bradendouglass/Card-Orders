%h1 Stripe Specifications
%table{:class => "table table-striped"}
  %thead
    %tr
      %th ID
      %th
        = t("activerecord.attributes.stripe_specification.designBy", :default => t("activerecord.labels.designBy", :default => "Designby"))
      %th Created at
      %th Actions
  %tbody
    - @stripe_specifications.each do |stripe_specification|
      %tr
        %td= stripe_specification.id
        %td= link_to stripe_specification.designBy, stripe_specification_path(stripe_specification)
        %td= stripe_specification.created_at
        %td
          = link_to "Show", stripe_specification_path(stripe_specification), :class => 'btn btn-mini'
          = link_to "Edit", edit_stripe_specification_path(stripe_specification), :class => 'btn btn-mini'
          = link_to "Destroy", stripe_specification_path(stripe_specification), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}", :class => 'btn btn-mini btn-danger' 

= link_to "New", new_stripe_specification_path, :class => 'btn btn-primary'
