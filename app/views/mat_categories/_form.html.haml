%fieldset
  %legend
    = controller.action_name.capitalize
    Mat Category
  .control-group
    = f.label :matCatDescription, 'Material Category Description', :class => 'control-label'
    .controls
      = f.text_field :matCatDescription, :class => 'text_field'
  .control-group
    = f.label :matCategory, 'Mat Category', :class => 'control-label'
    .controls
      = f.text_field :matCategory, :class => 'text_field'
  .form-actions
    = f.submit 'Create Material Category', :class => 'btn btn-primary'
    = link_to "Cancel", mat_categories_path, :class => 'btn'
