= form_for(@forgotten_user) do |f|
  - if @forgotten_user.errors.any?
    #error_explanation
      %h2
        = pluralize(@forgotten_user.errors.count, "error")
        prohibited this forgotten_user from being saved:
      %ul
        - @forgotten_user.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :username
    %br/
    = f.text_field :username
  .field
    = f.label :hash
    %br/
    = f.text_field :hash
  .actions
    = f.submit
