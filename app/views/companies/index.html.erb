<h1>Listing companies</h1>

<table>
  <tr>
    <th>Address1</th>
    <th>Address2</th>
    <th>City</th>
    <th>Commissioned</th>
    <th>Name</th>
    <th>Country</th>
    <th>Market</th>
    <th>Phone</th>
    <th>Salesrep</th>
    <th>State</th>
    <th>Url</th>
    <th>Zip</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @companies.each do |company| %>
  <tr>
    <td><%= company.address1 %></td>
    <td><%= company.address2 %></td>
    <td><%= company.city %></td>
    <td><%= company.commissioned %></td>
    <td><%= company.name %></td>
    <td><%= company.country %></td>
    <td><%= company.market %></td>
    <td><%= company.phone %></td>
    <td><%= company.salesrep %></td>
    <td><%= company.state %></td>
    <td><%= company.url %></td>
    <td><%= company.zip %></td>
    <td><%= link_to 'Show', company %></td>
    <td><%= link_to 'Edit', edit_company_path(company) %></td>
    <td><%= link_to 'Destroy', company, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

