= form_for(@customer_note) do |f|
  - if @customer_note.errors.any?
    #error_explanation
      %h2
        = pluralize(@customer_note.errors.count, "error")
        prohibited this customer_note from being saved:
      %ul
        - @customer_note.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :company
    %br/
    = f.number_field :company
  .field
    = f.label :noteInfo
    %br/
    = f.text_area :noteInfo
  .actions
    = f.submit
