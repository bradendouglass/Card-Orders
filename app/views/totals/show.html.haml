%table{:class => "table table-bordered"}
  %tbody
    %tr
      %td
        Freight Cost
      %td=@total.freight_cost
    %tr
      %td
        Quantity
      %td=@total.quantity
    %tr
      %td
        Separate Freight
      %td=@total.separate_freight
    %tr
      %td
        Margin
      %td=@total.margin
    %tr
      %td
        Desired M
      %td=@total.desired_m
    %tr
      %td
        Selected
      %td=@total.selected
    %tr
      %td
        Product ID
      %td=@total.product_id



.form-actions
  =link_to "Back", totals_path, :class => 'btn'
  =link_to "Edit", edit_total_path(@total), :class => 'btn'
  =link_to "Delete", total_path(@total), :method => "delete", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}", :class => 'btn btn-danger'
