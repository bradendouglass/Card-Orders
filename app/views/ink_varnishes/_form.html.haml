%fieldset
  %legend
    = controller.action_name.capitalize
    Ink Varnish
  .control-group
    = f.label :inkCostPerPound, "Ink Cost Per Pound", :class => 'control-label'
    .controls
      = f.number_field :inkCostPerPound, :class => 'number_field'
  .control-group
    = f.label :inkMsiPerPound, "Ink MSI Per Pound", :class => 'control-label'
    .controls
      = f.number_field :inkMsiPerPound, :class => 'number_field'
  .control-group
    = f.label :vendor, :class => 'control-label'
    .controls
      = f.text_field :vendor, :class => 'text_field'
  .control-group
    = f.label :vendorPartNumber, "Vendor Part Number", :class => 'control-label'
    .controls
      = f.text_field :vendorPartNumber, :class => 'text_field'
  .form-actions
    = f.submit 'Create Ink Varnish', :class => 'btn btn-primary'
    = link_to "Cancel", ink_varnishes_path, :class => 'btn'
