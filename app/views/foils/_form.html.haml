= form_for(@foil) do |f|
  - if @foil.errors.any?
    #error_explanation
      %h2
        = pluralize(@foil.errors.count, "error")
        prohibited this foil from being saved:
      %ul
        - @foil.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .field
    = f.label :length
    %br/
    = f.number_field :length
  .field
    = f.label :msi
    %br/
    = f.number_field :msi
  .field
    = f.label :type
    %br/
    = f.text_field :type
  .field
    = f.label :width
    %br/
    = f.number_field :width
  .actions
    = f.submit
