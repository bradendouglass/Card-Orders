%fieldset
  %legend
    = controller.action_name.capitalize
    /Inksignature
  .control-group
    = f.label :vendorpartnumber, 'Vendor Part Number', :class => 'control-label'
    .controls
      = f.text_field :vendorpartnumber, :class => 'text_field'
  .control-group
    = f.label :vendor, :class => 'control-label'
    .controls
      = f.text_field :vendor, :class => 'text_field'
  .control-group
    = f.label :magtype, 'Mag Type', :class => 'control-label'
    .controls
      = f.text_field :magtype, :class => 'text_field'
  .control-group
    = f.label :inktype, 'Ink Type', :class => 'control-label'
    .controls
      = f.number_field :inktype, :class => 'number_field'
  .control-group
    = f.label :inkmsiperpound, 'Ink MSI Per Pound', :class => 'control-label'
    .controls
      = f.number_field :inkmsiperpound, :class => 'number_field'
  .control-group
    = f.label :inkcostperpound, 'InkCost Per Pound', :class => 'control-label'
    .controls
      = f.number_field :inkcostperpound, :class => 'number_field'
  .form-actions
    = f.submit 'Create Ink Signature', :class => 'btn btn-primary'
    = link_to "Cancel", inksignatures_path, :class => 'btn'
