= form_for(@foiltype) do |f|
  - if @foiltype.errors.any?
    #error_explanation
      %h2
        = pluralize(@foiltype.errors.count, "error")
        prohibited this foiltype from being saved:
      %ul
        - @foiltype.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :type
    %br/
    = f.text_field :type
  .actions
    = f.submit
