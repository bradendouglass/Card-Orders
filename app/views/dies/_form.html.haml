= form_for(@dy) do |f|
  - if @dy.errors.any?
    #error_explanation
      %h2
        = pluralize(@dy.errors.count, "error")
        prohibited this dy from being saved:
      %ul
        - @dy.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :dieCatagory
    %br/
    = f.text_field :dieCatagory
  .field
    = f.label :costpercard
    %br/
    = f.number_field :costpercard
  .field
    = f.label :costspertooth
    %br/
    = f.number_field :costspertooth
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .field
    = f.label :initialCost
    %br/
    = f.number_field :initialCost
  .field
    = f.label :initialLife
    %br/
    = f.number_field :initialLife
  .field
    = f.label :retoolCost
    %br/
    = f.number_field :retoolCost
  .field
    = f.label :retoolLife
    %br/
    = f.number_field :retoolLife
  .actions
    = f.submit
