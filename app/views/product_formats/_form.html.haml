= form_for(@product_format) do |f|
  - if @product_format.errors.any?
    #error_explanation
      %h2
        = pluralize(@product_format.errors.count, "error")
        prohibited this product_format from being saved:
      %ul
        - @product_format.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .field
    = f.label :formatId
    %br/
    = f.text_field :formatId
  .actions
    = f.submit
